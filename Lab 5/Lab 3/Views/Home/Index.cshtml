@model Sale
@{
    ViewData["Title"] = "Ryan's Rapid Sports";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Ryan's Rapid Sports!'</h1>
 @*<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
 *@ </div>

    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>

        <div class="container">
            <div class="row form-group">
                <label asp-for="SaleAmount" class="col-sm-3">Sale Amount</label>
                <input asp-for="SaleAmount"/>
            </div>

            <div class="row form-group">
                <label asp-for="TaxRate" class="col-sm-3">Tax Rate</label>
                <input asp-for="TaxRate" />
            </div>

            <div class="row form-group">
                <label class="col-sm-3">Tax Amount</label>
                <input value=@ViewBag.TaxAmount.ToString("C2") readonly/>
            </div>

            <div class="row form-group">
                <label class="col-sm-3">Total Sale Price</label>
                <input value=@ViewBag.TotalSalePrice.ToString("C2") readonly />
            </div>

            <button type="submit">Calculate Tax</button>
            <a asp-action="index">Clear</a>
        </div>
    </form>