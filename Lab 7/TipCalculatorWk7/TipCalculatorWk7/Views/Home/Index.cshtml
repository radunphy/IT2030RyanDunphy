@model TipCalculator
@{
    ViewData["Title"] = "Tip Calculator";
}

<div asp-validation-summary="All"></div>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="MealCost">Cost of meal:</label>
        <input asp-for="MealCost" />
    </div>
    <div>
        <label>15% tip:</label>
        <!-- Had to adjust spelling. Fifteem TO Fifteen -->
        <label>@ViewBag.Fifteen.ToString("c2")</label>
    </div>
    <div>
        <label>20% tip:</label>
        <!-- Had to adjust spelling. Tweny TO Twenty --> 
            <label>@ViewBag.Twenty.ToString("c2")</label>  
    </div>
    <div>
        <label>25% tip:</label>
        <!-- Had to adjust spelling. TwentyFeve TO TwentyFive -->
        <label>@ViewBag.TwentyFive.ToString("c2")</label> 
    </div>
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>

